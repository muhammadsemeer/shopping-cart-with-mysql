<div class="login-form">
  <form action="/signup" method="post">
    <h1>
      Create An Account
    </h1>
    <h4>{{error}}</h4>
    <label>
      Name
    </label>
    <input type="text" name="name" />
    <label>
      Email
    </label>
    <input type="email" name="email" />
    <label>
      Password
    </label>
    <input type="password" name="password" />
    <a href="/login">
      Already Have an Account ?
    </a>
    <input type="submit" value="Create" />
  </form>
</div>