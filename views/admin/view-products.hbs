<div class="table-container">
  <table>
    <thead>
      <tr>
        <th>
          Product ID
        </th>
        <th>
          Image
        </th>
        <th>
          Name
        </th>
        <th>
          Category
        </th>
        <th>
          Description
        </th>
        <th>
          Price
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>
            {{this.productid}}
          </td>
          <td>
            <img src="./images/product-images/{{this.productid}}.jpg" />
          </td>
          <td>
            {{this.name}}
          </td>
          <td>
            {{this.category}}
          </td>
          <td>
            {{this.description}}
          </td>
          <td>
            {{this.price}}/-
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>